@model EmpRegisterViewModel
@{
    Layout = "_Layout2";
    ViewData["Title"] = "Register Employee";
}

<div class="container-fluid">
    <div class="mainSectionRegister col-md-8 col-lg-6 mx-auto my-5">
        <h2>@ViewData["Title"]</h2>
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="d-flex align-items-end mb-4">
                <div class="personImage">
                    <img class="img-fluid" src="~/assets/img/person-image.png" alt="person image" id="perImg">
                </div>
                <div class="form-group d-inline-block col pr-0 mb-0">
                    <label asp-for="Image">Upload person image</label>
                    <input asp-for="Image" class="form-control-file"
                           onchange="document.getElementById('perImg').src = window.URL.createObjectURL(this.files[0])">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FullName">First name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter first name">
            </div>
            <div class="form-group">
                <label asp-for="FullName">Last name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter last name">
            </div>
            <div class="form-group">
                <label asp-for="IdNumber">ID number</label>
                <input asp-for="IdNumber" class="form-control" placeholder="Enter ID number">
            </div>
            <div class="form-group">
                <label asp-for="Gpa">GPA</label>
                <input asp-for="Gpa" class="form-control" placeholder="Enter GPA">
            </div>
            <div class="form-group">
                <label asp-for="Phone">Mobile number</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter mobile number">
            </div>
            <div class="form-group">
                <label asp-for="State">State</label>
                <select asp-for="State" class="form-control">
                    <option value="0">@State.Gaza</option>
                    <option value="1">@State.WestBank</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth">Date of birth</label>
                <input asp-for="DateOfBirth" class="form-control">
            </div>
            <div class="form-group">
                <label>Sex</label><br>
                <div class="custom-control custom-radio d-inline-block mr-3">
                    <input asp-for="Gender" type="radio" id="male" value="0" class="custom-control-input" checked>
                    <label class="custom-control-label" for="male">Male</label>
                </div>
                <div class="custom-control custom-radio d-inline-block">
                    <input asp-for="Gender" type="radio" id="female" value="1" class="custom-control-input">
                    <label class="custom-control-label" for="female">Female</label>
                </div>
            </div>
            @*<div class="form-group">
                    <label for="applicantSkills">Applicant skills</label>
                    <textarea name="applicantSkills" class="form-control" id="applicantSkills" rows="3" required></textarea>
                </div>
                <div class="form-group">
                    <label for="university">University</label>
                    <select name="university" id="university" class="form-control">
                        <option value="azhar">Al-Azhar university</option>
                        <option value="islamic">Islamic university</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="universitySpecialization">University specialization</label>
                    <select name="universitySpecialization" id="universitySpecialization" class="form-control">
                        <option value=""></option>
                        <option value=""></option>
                    </select>
                </div>*@
            <div class="form-group">
                <label asp-for="CvFile">Upload your CV</label>
                <input asp-for="CvFile" class="form-control-file">
            </div>
            <div class="form-group">
                <label asp-for="Email">Email address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter password" aria-describedby="passwordNote">
                <small id="passwordNote" class="form-text text-muted">Must be 8-20 characters long.</small>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm password</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password">
            </div>
            <input type="submit" value="Create account">
        </form>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
