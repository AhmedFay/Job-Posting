@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout2";
}

@*<a asp-action="EmpRegister" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>*@

<div class="container-fluid">
    <div class="row mainSectionLogin">
        <h2 class="loginHead my-5 mx-5">welcome</h2>
        <div class="d-flex w-100">
            <form class="col-6 pl-5" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password">
                </div>
                <div class="custom-control custom-checkbox mr-sm-2">
                    <input asp-for="RememberMe" class="custom-control-input" id="rememberMe">
                    <label asp-for="RememberMe" class="custom-control-label">Remember me</label>
                </div>
                <input type="submit" name="login" class="my-4" value="login">
            </form>
            <div class="changePasswordImg col-6">
                <img class="img-fluid" src="~/assets/img/loginImg.jpg">
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
